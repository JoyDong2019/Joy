#include<stdio.h>
#include<math.h>
int main(void) 
{
	int i = 1;
	int flag = 1;
	double sum = 0;
	double n = 1.0;
	double eps;
	printf("请输入精度：");
	scanf_s("%lf", &eps);
	if (eps >= 1)
		printf("%1f", n);
	else {
		while (fabs(n) > eps) {
			n = flag * 1.0 / i;
			sum = sum + n;
			i = i + 3;
			flag = -flag;
		}
		printf("%.6f", sum);
	}
	return 0;
}
